<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectnew"
    tools:context=".MainActivity" >

    <Button android:id="@+id/btn_select_1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

    <Button android:id="@+id/btn_select_2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn_select_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"></Button>

    <Button android:id="@+id/btn_select_3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/btn_select_1"
        android:layout_alignLeft="@+id/btn_select_1"
        android:layout_alignStart="@+id/btn_select_1"></Button>

    <Button android:id="@+id/btn_select_4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn_select_3"
        android:layout_alignLeft="@+id/btn_select_2"
        android:layout_alignStart="@+id/btn_select_2"></Button>

    <Button android:id="@+id/btn_select_5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_select_3"
        android:layout_alignStart="@+id/btn_select_3"
        android:layout_marginBottom="50dp"></Button>

    <Button android:id="@+id/btn_select_6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn_select_5"
        android:layout_alignLeft="@+id/btn_select_4"
        android:layout_alignStart="@+id/btn_select_4"></Button>

</RelativeLayout>